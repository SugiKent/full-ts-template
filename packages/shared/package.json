{
  "name": "@repo/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./config/*": {
      "types": "./src/config/*.ts",
      "default": "./src/config/*.ts"
    },
    "./schemas/*": {
      "types": "./src/schemas/*.ts",
      "default": "./src/schemas/*.ts"
    },
    "./types/*": {
      "types": "./src/types/*.ts",
      "default": "./src/types/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write src",
    "format": "biome format --write src"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "zod": "^4.2.1"
  }
}
