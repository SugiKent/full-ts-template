{
  "name": "full-ts-with-ai-template",
  "version": "1.0.0",
  "description": "Full-Stack TypeScript Application Template with AI Development Support",
  "type": "module",
  "engines": {
    "node": ">=24.11.1",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\" --names \"server,client\" --prefix-colors \"cyan,magenta\"",
    "dev:client": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "build": "tsc --noEmit && vite build",
    "start": "tsx src/server/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write . && tsx customLinter/index.ts",
    "format": "biome format --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@better-auth/client": "0.0.2-alpha.3",
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.0.2",
    "@orpc/client": "^1.13.0",
    "@orpc/server": "^1.13.0",
    "@orpc/standard-server-fastify": "^1.13.0",
    "@prisma/client": "^6.19.1",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.7",
    "dotenv": "^17.2.3",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "pino": "^10.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "zod": "^4.2.1"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prisma": "^6.19.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
