# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://app_user:app_pass@localhost:15432/app_name_db?schema=public&sslmode=prefer

# Redis
REDIS_URL=redis://localhost:16379
REDIS_TTL=86400

# Azure Blob Storage (Production Only)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=uploads

# Azure Application Insights (Production Only)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters_long
SESSION_MAX_AGE=86400000

# API Configuration
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_32_characters_long
JWT_REFRESH_EXPIRES_IN=30d

# Admin Account (First-time Setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password_immediately

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:8080

# Trusted Origins (カンマ区切りで複数指定可能)
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:8080

# Feature Flags
ENABLE_SWAGGER_DOCS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# Email Configuration
# 開発環境: Mailpit (docker-compose で起動)
# 本番環境: SendGrid, AWS SES, Resend などに変更
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME=App Name

# External Services (Optional)
SLACK_WEBHOOK_URL=
SENTRY_DSN=
