# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Service URL
APP_URL=http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://app_user:app_pass@localhost:15432/app_db?schema=public&sslmode=prefer

# Redis
REDIS_URL=redis://localhost:16379

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# Admin Account (First-time Setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password_immediately

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:8080
BETTER_AUTH_SECRET=your_better_auth_secret_minimum_32_characters_long

# Trusted Origins (comma-separated)
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:8080

# Email Configuration
# Development: Nodemailer + Mailpit (docker-compose)
# Production: Resend API (set RESEND_API_KEY)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME=App Name

# Resend Configuration (Production)
# Get your API key from https://resend.com/
RESEND_API_KEY=

# Sentry Error Monitoring (Optional)
# Get your DSN from https://sentry.io/
# Server-side DSN (used by Node.js/Fastify)
SENTRY_DSN=
# Client-side DSN (used by React, exposed to browser via Vite)
VITE_SENTRY_DSN=

# Amplitude Analytics (Optional)
# Get your API key from https://analytics.amplitude.com/
# Use different keys for development and production environments
VITE_AMPLITUDE_API_KEY=
